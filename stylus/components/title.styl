.title
  font-size 1.5em

  a
    text-decoration none
    color darkgrey

// Small.
@media all and (max-width bp-medium)
  .title
    margin-top 1.3rem // Seems to match `h1`'s `margin-top`.
    margin-bottom .25rem

    & + h1
      margin-top 0

// Not small.
@media not all and (max-width bp-medium)
  .title
    line-height 2.4rem // Seems to match `h1`'s `line-height`.
    margin-left 1em
    float right
    position relative
    z-index 2
